#!/usr/bin/env bash

echo ">>> Unregister the node if it was done before"

PGCONNECT_TIMEOUT=$CHECK_PGCONNECT_TIMEOUT PGPASSWORD=$REPLICATION_PASSWORD  psql -h $CURRENT_REPLICATION_PRIMARY_HOST -U $REPLICATION_USER  $REPLICATION_DB -c "DELETE FROM $REPMGR_SCHEMA.$REPMGR_NODES_TABLE WHERE conninfo LIKE '%host=$CLUSTER_NODE_NETWORK_NAME%'"